@{
    ViewData["Title"] = "Exhibiciones";
}

<h2 class="header">AQUARIUM ofrece numerosas actividades <br> y visitas guiadas para realizar</h2>
<div class="slideshow">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @{
                    string activo="active";
                    foreach(Exhibicion item in ViewBag.ListaExhibiciones)
                    {        
                        <div class='carousel-item @activo'>
                            <img src="wwwroot\img\@item.img" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                                <div class="slidecaption">
                                    <h5>@item.Titulo</h5>
                                    <p>@item.Descripcion</p>
                                </div>
                            </div>
                        </div>
                        activo="";
                    }
            }
        </div>
            <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </button>
        </div>
    </div>
</div>
