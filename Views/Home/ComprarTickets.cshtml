@{
    ViewData["Title"] = "Comprar Tickets";
}

<div class="container-fluid headerform">
    <h2>Compra de Entradas</h2>
    <p>Porfavor complete los siguientes campos</p>
</div>

  <form method="post" action="">


  <div class="container-md form">
      <div class="form-floating mb-3">
        <input type="email" class="form-control" id="floatingInput" placeholder="Ingrese su Nombre">
        <label for="floatingInput">Nombre</label>
        </div>
      <div class="form-floating mb-3">
      <input type="email" class="form-control" id="floatingInput" placeholder="Ingrese su Apellido">
      <label for="floatingPassword">Apellido</label>
        </div>
      <div class="form-floating mb-3">
      <input type="tel" class="form-control" id="floatingInput" placeholder="Ingrese su DNI">
      <label for="floatingPassword">DNI</label>
        </div>
      <div class="form-floating mb-3">
        <input type="number" max="5" min="1" step="1" class="form-control" id="floatingInput" placeholder="Ingrese su numero de entradas">
         <label for="floatingPassword">Numero de Entradas</label>
        </div>
  
          <div class="form-floating mb-3">
          <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
            @{
              int num= 1;
              foreach(Exhibicion item in ViewBag.ListaExhibiciones)
              {
                num++;
                <option  value="@num" >@item.Titulo</option>
              }
           }
            </select>
            <label for="floatingSelect">Seleccione La Exhibicion a Ver</label>
          </div>

    <button class="btn-hover color-3 confirmar" type="sumbit" value="Confirmar">Confirmar</button>
  </div>
  </form>