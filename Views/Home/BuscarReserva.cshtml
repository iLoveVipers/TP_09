@{
    ViewData["Title"] = "Buscar Reserva";
}

<div class="container-fluid headerform">
    <h2>Informacion Reserva</h2>
</div>

<div class="container-fluid">

    <div class="btn-group-vertical" id="container-info" role="group" aria-label="Vertical button group">
        @foreach (Reservas item in ViewBag.ListaResevas)
        {
            <div>
                <button type="button" class="btn-hover color-4 link-nav lista" data-toggle="modal" data-target="#ModalRes"
                onclick="BuscarReserva(@item.IdReserva)">RESERVA NÂ° @item.IdReserva
                    <br> Reserva a Nombre de: @item.Nombre @item.Apellido
                </button>
            </div>
        }
    </div>

    <div class="modal fade" id="ModalRes" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ModalTitle"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="ModalBody"></div>
                </div>
                <div class="modal-footer">
                    <input class="d-none" id="PrecioFinal" name="PrecioFinal">
                    <input class="d-none" id="idExhibicion" name="idExhibicion">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Entendido</button>
                </div>
            </div>
        </div>
    </div>



</div>